<div class="container mt-4">
    <h2>Loan Application</h2>
    <form action="/submitdocs" method="post" enctype="multipart/form-data">

        <div class="form-group">
            <label for="start_date">Start Date:</label>
            <input type="date" class="form-control" id="start_date" name="start_date" required>
        </div>
        <div class="form-group">
            <label for="end_date">End Date:</label>
            <input type="date" class="form-control" id="end_date" name="end_date" required>
        </div>
        
        <div class="form-group">
            <label for="pay_statements">Latest Two Months' Pay Statements:</label>
            <input type="file" class="form-control-file" id="pay_statements" name="pay_statements" accept=".pdf" required>
        </div>
        <div class="form-group">
            <label for="employment_contract">Contract of Employment:</label>
            <input type="file" class="form-control-file" id="employment_contract" name="employment_contract" accept=".pdf" required>
        </div>
        <div class="form-group">
            <label for="title_deed_lease">Copy of Title Deed/Lease:</label>
            <input type="file" class="form-control-file" id="title_deed_lease" name="title_deed_lease" accept=".pdf" required>
        </div>
        <div class="form-group">
            <label for="kra_pin">Copy of Kenya Revenue Authority Tax Compliance:</label>
            <input type="file" class="form-control-file" id="tax_comp" name="tax_comp" accept=".pdf" required>
        </div>
        <div class="form-group">
                <label for="kra_pin">Your KRA PIN:</label>
                <input type="text" id="kra_pin" name="kra_pin" required>
            </div>
        
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
</div>

