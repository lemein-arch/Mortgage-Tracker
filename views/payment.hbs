<script>
function checkPayment() {
    // Check required fields
    const mpesaNumber = document.getElementById("mpesaNumber").value;
    const TotalPaid = document.getElementById("TotalPaid").value;

    if (!mpesaNumber || !TotalPaid) {
        alert('Please fill out all required fields.');
        return false;
    }
        // Check if the first three digits of the phone number are '254'
    if (mpesaNumber.slice(0, 3) !== '254') {
        alert('Please enter a Kenyan phone number starting with "254".');
        return false;
    }
    // Perform validation here
    if (mpesaNumber.length !== 12 || isNaN(mpesaNumber)) {
        alert("Please enter a valid M-Pesa number.");
        return false; 
    }
    return true; 
}
</script>        
